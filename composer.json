{
  "name": "vis/image_storage_l5",
  "description": "Image storage for L5",
  "authors": [
    {
      "name": "vis",
      "email": "k.gluschenko@vis-design.com"
    }
  ],
  "autoload": {
    "classmap": [
      "src/Models",
      "src/Http/Controllers",
      "src/Migrations"
    ],
    "psr-4": {
      "Vis\\ImageStorage\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan migrate --path=vendor/vis/image_storage_l5/src/Migrations",
      "php artisan vendor:publish --tag=public --force",
      "php artisan vendor:publish --tag=image-storage-config --force"
    ],
    "post-update-cmd": [
      "php artisan vendor:publish --tag=public --force"
    ]
  }
}
